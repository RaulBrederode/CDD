opcao = 1
while opcao != 7:
    num1 = int(input("Digite o primeiro número: "))
    num2 = int(input("Digite o segundo número: "))
    print("Selecione uma das operações abaixo:\n"
          "[ 1 ] para SOMA\n"
          "[ 2 ] para SUBTRAÇÃO\n"
          "[ 3 ] para MULTIPLICAÇÃO\n"
          "[ 4 ] para DIVISÃO\n"
          "[ 5 ] para digitar novos números\n"
          "[ 6 ] para SAIR")
    opcao = int(input("Selecione a operação: "))
    if opcao == 1:
        soma = num1 + num2
        print(f"a soma do número {num1} com o número {num2} é igual a: {soma}")
        print()
    if opcao == 2:
        subtracao = num1 - num2
        print(f"O número {num1} - {num2} é igual a: {subtracao}")
        print()
    if opcao == 3:
        multiplicacao = num1 * num2
        print(f"A multiplicação do {num1} pelo {num2} é igual a: {multiplicacao}")
        print()
    if opcao == 4:
        divisao = num1 / num2
        print(f"A divisão entre o número {num1} por {num2} é igual a: {divisao}")
        print()
    if opcao == 5:
        print("Vamos de novo então!")
        print()
    if opcao == 6:
        print("Finalizado.")
        break
